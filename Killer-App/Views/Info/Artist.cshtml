@using System.Web.Mvc.Html
@model Killer_App.Helpers.Objects.Artist

@{
    ViewBag.Title = "Artist";
}

<h2>@Model.FullName</h2>

@* TODO: Info here *@

<h4>Songs</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Albums</th>
            <th>Artists</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Songs != null)
        {
            foreach (var song in Model.Songs)
            {
                <tr>
                    <td>
                        @Html.Raw(song)
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", song.Albums))
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", song.Artists))
                    </td>
                    <td>
                        @song.Duration.ToString(@"mm\:ss")
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h4>Albums</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Artists</th>
            <th>Songs</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Albums != null)
        {
            foreach (var album in Model.Albums)
            {
                <tr>
                    <td>
                        @Html.Raw(album)
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", album.Artists))
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", album.Songs))
                    </td>
                </tr>
            }
        }
    </tbody>
</table>