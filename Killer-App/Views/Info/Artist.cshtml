@using System.Web.Mvc.Html
@model Killer_App.Helpers.Objects.Artist

@{
    ViewBag.Title = "Artist";
}

<h2>@Model.FullName</h2>

<h4>Songs</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Albums</th>
            <th>Artists</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Songs != null)
        {
            foreach (var song in Model.Songs)
            {
            <tr>
                <td>
                    @Html.ActionLink(song.Name, "Song", new {song.Id})
                </td>
                <td>
                    @{ var albums = string.Join(", ", song.Albums.Select(album => @Html.ActionLink(@album.Name, "Album", new { album.Id }))); }
                    @Html.Raw(albums)
                </td>
                <td>
                    @{ var artists = string.Join(", ", song.Artists.Select(artist => @Html.ActionLink(artist.FullName, "Artist", new { Id = artist.ArtistId }))); }
                    @Html.Raw(artists)
                </td>
                <td>
                    @song.Duration
                </td>
            </tr>
                                }
                            }
    </tbody>
</table>

<h4>Albums</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Artists</th>
            <th>Songs</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Albums != null)
        {
            foreach (var album in Model.Albums)
            {
                <tr>
                    <td>
                        @Html.ActionLink(album.Name, "Album", new {album.Id})
                    </td>
                    <td>
                        @{ var albums = string.Join(", ", album.Artists.Select(artist => @Html.ActionLink(artist.FirstName, "Artist", new {Id = artist.ArtistId}))); }
                        @Html.Raw(albums)
                    </td>
                    <td>
                        @{ var songs = string.Join(", ", album.Songs.Select(song => @Html.ActionLink(song.Name, "Song", new {song.Id}))); }
                        @Html.Raw(songs)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>