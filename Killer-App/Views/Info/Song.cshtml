@using System.Web.Mvc.Html
@model Killer_App.Helpers.Objects.Song

@{
    ViewBag.Title = "Song";
}

<h2>@Model.Name</h2>

@*TODO: Info here*@

<h4>Artists</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Albums</th>
            <th>Songs</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Artists != null)
        {
            foreach (var artist in Model.Artists)
            {
                <tr>
                    <td>
                        @Html.Raw(artist)
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", artist.Albums.Select(x => x.LinkString())))
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", artist.Songs.Select(x => x.LinkString())))
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h4>Albums</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Artists</th>
            <th>Songs</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Albums != null)
        {
            foreach (var album in Model.Albums)
            {
                <tr>
                    <td>
                        @Html.Raw(album)
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", album.Artists.Select(x => x.LinkString())))
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", album.Songs.Select(x => x.LinkString())))
                    </td>
                </tr>
            }
        }
    </tbody>
</table>