@using System.Web.Mvc.Html
@model Killer_App.Helpers.Objects.Album

@{
    ViewBag.Title = "Album";
}

<h2>@Model.Name</h2>

@* TODO:Info here *@

<h4>Artists</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Albums</th>
            <th>Songs</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Artists != null)
        {
            foreach (var artist in Model.Artists)
            {
                <tr>
                    <td>
                        @Html.Raw(artist)
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", artist.Albums.Select(x => x.LinkString())))
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", artist.Songs.Select(x => x.LinkString())))
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h4>Songs</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Albums</th>
            <th>Artists</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Songs != null)
        {
            foreach (var song in Model.Songs)
            {
                <tr>
                    <td>
                        @Html.Raw(song)
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", song.Albums.Select(x => x.LinkString())))
                    </td>
                    <td>
                        @Html.Raw(string.Join(", ", song.Artists.Select(x => x.LinkString())))
                    </td>
                    <td>
                        @song.Duration.ToString(@"mm\:ss")
                    </td>
                </tr>
            }
        }
    </tbody>
</table>