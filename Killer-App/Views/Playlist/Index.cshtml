@model Killer_App.Models.Playlist.PlaylistModel

@{
    ViewBag.Title = "Index";
}
<br />
<button type="button" class="btn btn-default" data-toggle="modal" data-target="#playlistModal">Add Playlist</button>

<div id="playlistModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Playlist</h4>
            </div>
            @using (Html.BeginForm("AddPlaylist", "Playlist", FormMethod.Post))
            {
                <div class="modal-body">
                    <p>What's the name of your playlist?</p>

                    @Html.TextBox("name")

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-default" data-dosmiss="model">Save</button>
                </div>
            }
        </div>
    </div>
</div>
<br /> <br />

<h2>Playlists</h2>

@foreach (var playlist in Model.Playlists)
{
    <button class="btn btn-default" onclick="location.href='/Playlist/Details/@playlist.Id'">@playlist.Name</button><br />
}